@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<form id="profile-form" class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="Input.Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Input.Username" class="form-control" placeholder="Nome">
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Input.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Input.Email" class="form-control" id="inputEmail" placeholder="E-mail" disabled>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Input.PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Input.PhoneNumber" class="form-control" id="inputName2" placeholder="Telefone">
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-danger">Salvar</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
